<br />
<div class="col-lg-5 col-lg-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Checkout</h4>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-4">
          <h5>Delivery Address</h5>
          <br/>
        </div>
        <div class="col-lg-8">
          <div class="form-group">
            <select class="form-control">
              <option disabled>Select an address</option>
              <option value="" selected>Tyler Ruby, 123 Luckie Street #1507</option>
            </select>
          </div>
        </div>
        <div id="address-info" class="hidden">
          <form>
            <div class="col-lg-12">
            <hr />
              <div class="col-lg-6">
                <div class="form-group">
                  <input type="first-name" class="form-control" placeholder="First Name">
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <input type="last-name" class="form-control" placeholder="Last Name">
                </div>
              </div>
              <div class="col-lg-9">
                <div class="form-group">
                  <input type="street-address" class="form-control" placeholder="Street Address">
                </div>
              </div>
              <div class="col-lg-3">
                <div class="form-group">
                  <input type="apt" class="form-control" placeholder="Apt/Suite">
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <input type="city" class="form-control" placeholder="City">
                </div>
              </div>
              <div class="col-lg-3">
                <div class="form-group">
                  <input type="state" class="form-control" placeholder="State">
                </div>
              </div>
              <div class="col-lg-3">
                <div class="form-group">
                  <input type="zip" class="form-control" placeholder="Zip">
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                  <input type="notes" class="form-control" id="card" placeholder="Notes (Gate Code / Instructions)">
                </div>
              </div>
              <div class="col-lg-12">
                <button type="submit" class="btn btn-default pull-right">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <hr />
      <a id="add-address" class="btn btn-default black">Add New Address</a>
      <hr />
      <div class="row">
        <div class="col-lg-4">
          <h5>Select Payment</h5>
          <br/>
        </div>
        <div class="col-lg-8">
          <div class="form-group">
            <select class="form-control">
              <option disabled>Select payment method</option>
              <option value="" selected> Visa | 5809</option>
            </select>
          </div>
        </div>
        <div class="col-lg-12 hidden" id="payment-info">
          <hr />
          <form>
            <div class="col-lg-12">
              <div class="col-lg-12">
                <div class="form-group">
                  <input type="card" class="form-control" id="card" placeholder="1234 5678 9012 3456">
                </div>
              </div>
              <div class="col-lg-3">
                <div class="form-group">
                  <select class="form-control">
                    <option value="" selected disabled>Month</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                  </select>
                </div>
              </div>
              <div class="col-lg-3">
                <div class="form-group">
                  <select class="form-control">
                    <option value="" selected disabled>Year</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                  </select>
                </div>
              </div>
              <div class="col-lg-3">
                <div class="form-group">
                  <input type="ccv" class="form-control" id="card" placeholder="CCV">
                </div>
              </div>
              <div class="col-lg-3">
                <div class="form-group">
                  <input type="zip-code" class="form-control" id="card" placeholder="Zip Code">
                </div>
              </div>
              <div class="col-lg-12">
                <button type="submit" class="btn btn-default pull-right">Save</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <hr />
      <a id="add-payment" class="btn btn-default black">Add New Card</a>
    </div>
  </div>
</div>
<div class="col-lg-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Order Summary</h4>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-10">
          <h5>Subtotal</h5>
        </div>
        <div class="col-lg-2">
          <h5>$10</h5>
        </div>
        <div class="col-lg-10">
          <h5>Delivery</h5>
        </div>
        <div class="col-lg-2">
          <h5>$10</h5>
        </div>
      </div>

      <hr />

      <div class="col-lg-10">
        <h4>Total</h4>
      </div>
      <div class="col-lg-2">
        <h4>$20</h4>
      </div>
    </div>
    <div class="panel-footer">
      <a class="btn btn-default btn-block green">Checkout</a>
    </div>
  </div>
</div>